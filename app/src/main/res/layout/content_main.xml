<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.whinc.main.MainActivity"
    tools:showIn="@layout/activity_main">

    <TableRow >
        <CheckBox
            android:id="@+id/enable_ckb"
            android:text="Enable Log"
            android:checked="true"
            />
    </TableRow>
    <TableRow>
        <CheckBox
            android:id="@+id/print_line_info_ckb"
            android:text="Enable Print Line Info."
            android:checked="true"
            />
    </TableRow>
    <TableRow>
        <CheckBox
            android:id="@+id/intercept_log_ckb"
            android:text="Intercept Log output"
            android:checked="false"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:text="Log Level"
            android:gravity="center"
            />
        <Spinner
            android:id="@+id/level_spinner"
            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/verbose_btn"
            android:text="Verbose"
            android:onClick="onButtonClick"
            />
        <Button
            android:id="@+id/debug_btn"
            android:text="Debug"
            android:onClick="onButtonClick"
            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/info_btn"
            android:text="Info"
            android:onClick="onButtonClick"
            />
        <Button
            android:id="@+id/warn_btn"
            android:text="Warning"
            android:onClick="onButtonClick"
            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/error_btn"
            android:text="Error"
            android:onClick="onButtonClick"
            />
    </TableRow>
</TableLayout>
